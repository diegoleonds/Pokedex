<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleAppearance">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="TitleAppearance.CollapsedToolbar" parent="TitleAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleAppearance.CollapsedToolbar.Colorfull" parent="TitleAppearance.CollapsedToolbar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleAppearance.ExpandedToolbar.Colorfull" parent="TitleAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewTitleAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyCardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>